# editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[*.{cs,ps1,psm1}]
indent_size = 4

[*.{config,cshtml,css,html,js,json,md,nuspec,*proj,props,resx,scss,targets,tasks,ts,xml,yml}]
indent_size = 2

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.sh]
end_of_line = lf
indent_size = 4

# C# files
[*.cs]
dotnet_code_quality_unused_parameters = non_public # IDE0060
dotnet_remove_unnecessary_suppression_exclusions = none # IDE0079
dotnet_separate_import_directive_groups = false # IDE0055
